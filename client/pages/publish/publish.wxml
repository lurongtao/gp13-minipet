      <input class="weui-input" placeholder="请写您的具体需求" />
    </view>
  </view>

  <view class="item">
    <view class="label">
      联系方式
    </view>
    <view class="content">
      <input class="weui-input" placeholder="填写您的联系方式" />
    </view>
  </view>

  <button class="btn" type="default">发布信息</button>
